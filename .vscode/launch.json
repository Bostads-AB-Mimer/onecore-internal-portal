{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Internal Portal Frontend",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "program": "${workspaceFolder}/frontend/src/index.ts",
      "request": "launch",
      "restart": true,
      "runtimeExecutable": "${workspaceFolder}/frontend/node_modules/vite/bin/vite.js",
      "type": "node",
    },
    {
      "name": "Launch Internal Portal Backend",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "program": "${workspaceFolder}/backend/src/index.ts",
      "request": "launch",
      "restart": true,
      "runtimeExecutable": "${workspaceFolder}/backend/node_modules/nodemon/bin/nodemon.js",
      "type": "node",
    }
  ]
}
